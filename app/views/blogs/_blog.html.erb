<%# <header class="blog-header py-3">
<div class="row flex-nowrap justify-content-between align-items-center">
  My Blog
</div>
</header> %>

<div class="blog-post">
  <h2><%= link_to blog.title , blog %></h2>
  <p class="blog-post-meta"><%= distance_of_time_in_words(blog.created_at, Time.now) %> ago by  <a href="#">Mark</a></p>
  <p><%= blog.body %>
  <% if logged_in?(:site_admin)  %>
    <%= link_to blog.status, toggle_status_blog_path(blog)  %>
    <%= link_to 'Edit', edit_blog_path(blog)  %>
    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>

</div><!-- /.blog-post -->